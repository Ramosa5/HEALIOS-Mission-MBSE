package SpaceSegmentLevelRequirementPackage{
    private import MissionLevelRequirementsPackage::*;
    private import StakeholdersDefinitionPackage::*;
    private import ConcernsDefinitionPackage::*;
    private import StakeholderConcernsPackage::*;
    private import MissionPackage::*;
    //private import GroundSegmentLevelRequirementsPackage::*;


    requirement def <R_SS_001> SS_Self_Healing_Experiments specializes R_M_001 {
        doc /* The Space Segment shall enable active self-healing experiment performance on designated PSC samples by applying a controlled reverse-bias voltage during orbital eclipse phases. */
        subject Space_Segment references HealiosMissionInstancePackage::HEALIOS_Mission.HEALIOS_Space_Segment;

        requirement <R_SS_001_a> Payload_Accommodation {
            doc /* The Space Segment shall accommodate and support the operation of the perovskite solar cells payload. */
        }

        requirement <R_SS_001_b> PV_Data_Gathering {
            doc /* The Space Segment shall autonomously gather, store, and timestamp electrical performance data (Voltage, Current) of all photovoltaic technologies onboard throughout the mission, with a frequency higher than once per orbit. */
        }

        requirement <R_SS_001_c> Environment_Logging {

            doc /* The Space Segment shall log orbital environment parameters: thermal state, illumination condition, time since deployment, with a frequency higher than once per orbit. */
        }

        requirement <R_SS_001_d> Voltage_Range {
                doc /* The Space Segment shall be capable to apply a reverse-bias voltage  to selected perovskite solar cells during eclipse periods in the range of 0 to -5 V with a resolution of at least 0.1 V. */
            }

        requirement <R_SS_001_e> Reverse_Bias_Safety {
                doc /* The Space Segment shall ensure that reverse-bias conditions applied during self-healing cycles over the mission lifetime do not exceed material degradation thresholds of solar cells. */
        }

        requirement <R_SS_001_f> Sun_Pointing {
            doc /* The Space Segment shall maintain a sun-pointing attitude during the illuminated orbital phase to ensure consistent environmental conditions for the payload. */
        }

        requirement <R_SS_001_g> Data_Storage {
            doc /* The Space Segment shall have sufficient onboard data storage capacity to store all collected data between ground contacts, with redundancy to prevent data loss. */
        }

        requirement <R_SS_001_h> Eclipse_Detection {
            doc /* The Space Segment shall autonomously detect orbital eclipse periods to trigger self-healing cycles. */
        }

        requirement <R_SS_001_i> Autonomous_Execution {
            doc /* The Space Segment shall maintain autonomous execution of the experiment timeline such that temporary loss of ground communication does not interrupt scheduled phases. */
        }
    }

    requirement def <R_SS_002> Environmental_Survival specializes R_M_002, R_M_003 {
        doc /* The Space Segment shall survive the ground and launch activities and operate in the LEO environment for the mission duration of at least one year. */
        subject Space_Segment references HealiosMissionInstancePackage::HEALIOS_Mission.HEALIOS_Space_Segment;
        
        requirement <R_SS_002_a> Ground_Survival {
            doc /* The Space Segment shall survive the ground environment before the Launch, including the logistics and transportation. */
        }
        requirement <R_SS_002_b> Launch_Survival {
            doc /* The Space Segment shall withstand the mechanical and thermal stresses of the launch environment, including vibrations, shocks, and acoustic loads. */
        }
        requirement <R_SS_002_c> LEO_Survival {
            doc /* The Space Segment shall withstand the thermal and radiation environment of Low Earth Orbit (LEO) for a minimum operational lifetime of one year. */
        }
    }
    
    requirement def <R_SS_003> Deployer_Compatibility specializes R_M_004, R_M_015 {
        doc /* The Space Segment shall be compatible with the deployer environment. */
        subject Space_Segment references HealiosMissionInstancePackage::HEALIOS_Mission.HEALIOS_Space_Segment;
    }

    requirement def <R_SS_004> Launch_Mass specializes R_M_004 {
        doc /* The Space Segment should have a total launch mass not exceeding 2 kg within 0.001 kg tolerance. */

        subject Space_Segment references HealiosMissionInstancePackage::HEALIOS_Mission.HEALIOS_Space_Segment;

        attribute Mass_Limit  : ISQ::MassValue = 2.0 [SI::kg];
        attribute Mass_Tolerance : ISQ::MassValue = 0.001 [SI::kg];
        attribute Actual_Mass : ISQ::MassValue = Space_Segment.Total_Mass;

        require constraint {
            (Actual_Mass > 0.0 [SI::kg]) and
            (Actual_Mass <= Mass_Limit + Mass_Tolerance)
        }
    }

    requirement def <R_SS_005> Form_Factor_Requirement specializes R_M_004 {
        doc /* The Space Segment shall conform to the 1U CubeSat form factor as defined by the CubeSat Design Specification. */
        subject Space_Segment references HealiosMissionInstancePackage::HEALIOS_Mission.HEALIOS_Space_Segment;

        attribute required_size : String = "1U";
        attribute actual_size : String = Space_Segment.CubeSat_Form_Factor;

        require constraint {
            actual_size == required_size
        }
    }

    requirement def <R_SS_006> FYS_System_Compliance specializes R_M_006 {
        doc /* The Space Segment shall conform to all applicable ESA Fly Your Satellite! (FYS) engineering, safety, and testing standards throughout its lifecycle. */
        
        subject Space_Segment references HealiosMissionInstancePackage::HEALIOS_Mission.HEALIOS_Space_Segment;

        requirement <R_SS_006_a> FYS_Testing_Compatibility {
            doc /* The Space Segment shall maintain compatibility with the Fly Your Satellite! testing flow, including environmental and functional test setups, providing necessary test ports and Ground Support Equipment (GSE) interfaces. */
        }
        requirement <R_SS_006_b> FYS_Safety_Implementation {
            doc /* The Space Segment shall provide a safety plan traced to all FYS safety requirements and procedures. */
        }
        requirement <R_SS_006_c> FYS_Review_Deliverables {
            doc /* The Space Segment design, verification data, and models shall be structured to directly support the generation of Technical Data Packages (TDP) required for FYS programmatic milestone reviews (e.g., CDR, MRR). */
        }
    }

    requirement def <R_SS_007> EOL_Compliance specializes R_M_007 {
        doc /* The Space Segment shall implement end-of-life (EOL) measures compliant with space debris mitigation guidelines, such as passivation and deorbiting strategies. */
        subject Space_Segment references HealiosMissionInstancePackage::HEALIOS_Mission.HEALIOS_Space_Segment;
    }

    requirement def <R_SS_008> PFM_Campaign specializes R_M_011 {
        doc /* The Space Segment shall undergo a Proto-Flight Model (PFM) test campaign, compatible with the FYS testing flow and standards. */
        subject Space_Segment references HealiosMissionInstancePackage::HEALIOS_Mission.HEALIOS_Space_Segment;
        
        requirement <R_SS_008_a> PFM_Exclusions {
            doc /* The Space Segment PFM shall not be subjected to Life Testing, Burst Pressure, and Electrostatic Discharge (ESD) qualification. */
        }
        requirement <R_SS_008_b> Random_Vibration {
            doc /* The Space Segment shall undergo a random vibration test on all three axes. */
        }
        requirement <R_SS_008_c> Sinusoidal_Vibration {
            doc /* The Space Segment shall undergo a sinusoidal vibration test. */
        }
        requirement <R_SS_008_d> Quasi_Static_Load {
            doc /* The Space Segment shall undergo a Quasi-static load test. */
        }
        requirement <R_SS_008_e> Thermal_Cycling {
            doc /* The Space Segment shall undergo thermal cycling ( TVAC). */
        }
        requirement <R_SS_008_f> Bakeout {
            doc /* The Space Segment shall undergo a bakeout campaign. */
        }
        requirement <R_SS_008_g> PFM_Testing_Safety {
            doc /* The Space Segment PFM test campaign shall be planned and executed to ensure the safety of personnel, equipment, and facilities. */
        }
    }

    requirement def <R_SS_009> Telemetry_Protocol specializes R_M_013, R_M_016 {
        doc /* The Space Segment shall transmit telemetry data compatible with the defined Ground Segment protocols to enable correlation with terrestrial data. */
        subject Space_Segment references HealiosMissionInstancePackage::HEALIOS_Mission.HEALIOS_Space_Segment;
    }

    requirement def <R_SS_010> Beacon_Signal specializes R_M_013 {
        doc /* The Space Segment shall transmit a beacon signal to facilitate initial tracking and acquisition by the Ground Segment. */
        subject Space_Segment references HealiosMissionInstancePackage::HEALIOS_Mission.HEALIOS_Space_Segment;
    }

    requirement def <R_SS_011> FDIR_Implementation specializes R_M_014, R_M_019, R_M_020 {
        doc /* The Space Segment shall provide Foult Detection, Isolation, and Recovery (FDIR) capability to ensure spacecraft safety and experiment integrity. */
        subject Space_Segment references HealiosMissionInstancePackage::HEALIOS_Mission.HEALIOS_Space_Segment;

        requirement <R_SS_011_a> Fault_Detection {
            doc /* The Space Segment shall implement fault detection mechanisms or architecture. */
        }
        requirement <R_SS_011_b> Fault_Isolation {
            doc /* The Space Segment shall implement fault isolation mechanisms or architecture. */
        }
        requirement <R_SS_011_c> Fault_Recovery {
            doc /* The Space Segment shall implement progressive fault recovery sequences that attempt subsystem restart before invoking full safe mode. */
        }
        requirement <R_SS_011_d> Software_Updates {
            doc /* The Space Segment shall provide the capability to apply software updates throught the mission. */
        }
        requirement <R_SS_011_e> Safe_Mode {
            doc /* The Space Segment shall implement a safe mode that maintains basic spacecraft health and beacon transmission while non-essential functions are suspended. */
        }
    }

    requirement def <R_SS_012> Materials_Standard specializes R_M_014 {
        doc /* The Space Segment shall be constructed using space-compatible materials that comply with outgassing (TML, CVCM) and workmanship standards to prevent contamination of launch vehicles and other payloads. */
        subject Space_Segment references HealiosMissionInstancePackage::HEALIOS_Mission.HEALIOS_Space_Segment;
    }

    requirement def <R_SS_013> Safety_Plan specializes R_M_014 {
        doc /* The Space Segment shall have a documented safety plan that identifies potential hazards, risk mitigation measures, and compliance with safety requirements of the launch provider and test facilities. */
        subject Space_Segment references HealiosMissionInstancePackage::HEALIOS_Mission.HEALIOS_Space_Segment;

        //dependency R_SS_013 to FYS_System_Compliance::FYS_Safety_Implementation; 
    }

    requirement def <R_SS_014> Secure_Data_Link specializes R_M_020 {
        doc /* The Space Segment shall provide secure data transmission capabilities to protect sensitive mission data from unauthorized access or tampering. */
        subject Space_Segment references HealiosMissionInstancePackage::HEALIOS_Mission.HEALIOS_Space_Segment;

        //dependency R_SS_014 to FDIR_Implementation;
    }

    requirement def <R_SS_015> Autonomous_Mode_Management specializes R_M_021 {
        doc /* The Space Segment shall autonomously manage its operational states, including deployment, nominal mode (sun and eclipse phases), and safe mode, without requiring ground intervention. */
        subject Space_Segment references HealiosMissionInstancePackage::HEALIOS_Mission.HEALIOS_Space_Segment;

        requirement <R_SS_015_a> Deployment_Transition {
            doc /* The Space Segment shall autonomously transition from deployment configuration to nominal mode or safe mode, starting mission timing sequences. */
        }
        requirement <R_SS_015_b> Nominal_Operations {
            doc /* The Space Segment shall autonomously transition between sun and eclipse phases during nominal mode based on power generation and orbital position. */
        }
        requirement <R_SS_015_c> Safe_Mode_Transition {
            doc /* The Space Segment shall autonomously transition to safe mode upon the detection of critical system anomalies. */
        }
    }
}

package GroundSegmentLevelRequirementsPackage {
 private import MissionPackage::*;
    private import MissionLevelRequirementsPackage::*;
    private import StakeholdersDefinitionPackage::*;
    private import ConcernsDefinitionPackage::*;
    private import StakeholderConcernsPackage::*;


    requirement def <R_GS_001> GS_Communications_Operations specializes R_M_013 {
        doc /* The Ground Segment shall provide the operational capability to acquire, command, and receive telemetry from the spacecraft during scheduled visibility windows. */
        subject Ground_Segment references HealiosMissionInstancePackage::HEALIOS_Mission.HEALIOS_Ground_Segment;

        requirement <R_GS_001_a> Bidirectional_Communication {
            doc /* The Ground Segment shall support telecommand uplink and telemetry downlink with the spacecraft. */
        }

        requirement <R_GS_001_b> Pass_Prediction_TLE {
            doc /* The Ground Segment shall generate and maintain pass predictions using orbit propagation consistent with TLE-based inputs, and shall update predictions when new TLE data becomes available. */
        }

        requirement <R_GS_001_d> Beacon_Acquisition_Support {
            doc /* The Ground Segment shall support initial acquisition using the spacecraft beacon, including decoding, identification, and logging of beacon receptions. */
        }

        requirement <R_GS_001_e> Session_Execution_Procedures {
            doc /* The Ground Segment shall define and follow procedures for session execution, including pre-pass configuration, in-pass operations, and post-pass data handling. */
        }
    }

    requirement def <R_GS_002> GS_Health_Monitoring_And_Response specializes R_M_013 {
        doc /* The Ground Segment shall monitor spacecraft health telemetry during each visibility window and support anomaly detection and operational response. */
        subject Ground_Segment references HealiosMissionInstancePackage::HEALIOS_Mission.HEALIOS_Ground_Segment;

        requirement <R_GS_002_a> Near_RealTime_Health_Display {
            doc /* The Ground Segment shall provide near-real-time display of key spacecraft health parameters during each pass. */
        }

        requirement <R_GS_002_b> Limit_Checking_And_Alerts {
            doc /* The Ground Segment should implement telemetry limit checking and generate alerts for out-of-family parameters. */
        }

        requirement <R_GS_002_c> Anomaly_Ticketing_And_Log {
            doc /* The Ground Segment shall record anomalies, operator observations, and corrective actions in an operations log or ticketing mechanism. */
        }
    }

    requirement def <R_GS_003> GS_Security_Controls specializes R_M_020, R_M_013 {
        doc /* The Ground Segment shall implement security controls that prevent unauthorized commanding and protect mission data handling processes. */
        subject Ground_Segment references HealiosMissionInstancePackage::HEALIOS_Mission.HEALIOS_Ground_Segment;

        requirement <R_GS_003_a> Operator_Authentication {
            doc /* The Ground Segment shall require authenticated operator identity for all commanding actions. */
        }

        requirement <R_GS_003_b> Role_Based_Authorization {
            doc /* The Ground Segment shall enforce role-based access control for commanding functions and ground system configuration changes. */
        }

        requirement <R_GS_003_c> Key_Management_Procedures {
            doc /* The Ground Segment shall define and implement cryptographic key management procedures (generation, storage, rotation, revocation, and recovery) for secure commanding and related data handling. */
        }

