    requirement def <R_M_001> Self_Healing_Experiments { // NOT IN GROUND SEGMENT
        doc /* The mission shall perform active self-healing experiments on designated PSC samples by applying a controlled reverse-bias voltage during orbital eclipse phases. */

        subject HEALIOS_Mission references HealiosMissionInstancePackage::HEALIOS_Mission;
        
        frame concern Perovskite_TRL_Advancement_Concern references StakeholderConcernsPackage::Perovskite_TRL_Advancement_Concern;
        frame concern Perovskite_Investigation_Concern references StakeholderConcernsPackage::Perovskite_Investigation_Concern;
        frame concern Comparative_Study_Concern references StakeholderConcernsPackage::Comparative_Study_Concern;
        frame concern Data_Acquisition_Concern references StakeholderConcernsPackage::Data_Acquisition_Concern;
        frame concern Data_Availability_Concern references StakeholderConcernsPackage::Data_Availability_Concern;

        requirement <R_M_001_a> Self_Healing_Cycle {
            doc /* The mission shall implement a self-healing cycle that applies reverse-bias voltage to selected perovskite solar cells during eclipse periods. */
        }
        requirement <R_M_001_b> PSC_Performance {
            doc /* The mission shall characterise the performance of Perovskite Solar Cells (PSC) by measuring open-circuit voltage and short-circuit current, what results in Current-Voltage (I-V) curves. */
        }
        requirement <R_M_001_c> Control_Group_Benchmark {
            doc /* The mission shall utilise traditional solar cells as a control group to benchmark the degradation rates of the perovskite payload. */
        }
        requirement <R_M_001_d> Environment_Characterisation {
            doc /* The mission shall characterise the space environment by measuring radiation, irradiance, and temperature related to Perovskite Solar Cells samples, to contextualise with observed degradation and self-healing phenomena. */
        }
        requirement <R_M_001_e> Environmental_Repeatability {
            doc /* The mission scenarios shall enable repetitive environmental conditions for the perovskite solar cells and the benchmark group. */
        }
        requirement <R_M_001_f> Data_Management {
            doc /* The mission shall implement a data management strategy to ensure the integrity, accessibility, and usability of collected data for analysis and publication. */
        }
        requirement <R_M_001_g> Autonomous_Management {
            doc /* The mission shall autonomously manage experiment execution, including eclipse detection and data logging, to mitigate limited ground contact time. */
        }
    }

